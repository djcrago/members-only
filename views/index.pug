extends layout

block content

  for message in all_messages
    div.message
      h3 #{message.title}
      if currentUser && currentUser.member
        p #[em #{message.author.full_name}]
        p #[em #{message.timestamp_formatted}]
      p #{message.text}
      if currentUser && currentUser.admin 
        a.delete-btn.link(href=`/messages/delete-message/${message._id}`) Delete Message